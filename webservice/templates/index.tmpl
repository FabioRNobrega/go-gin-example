{{ define "base"}}
<!DOCTYPE html>
<html id="html" class="sl-theme-dark">

<head>
  <title>{{ .Title }}</title>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />

  <!-- HTMX -->
  <script src="https://cdnjs.cloudflare.com/ajax/libs/htmx/2.0.0/htmx.min.js"></script>

  <!-- Hyperscript -->
  <script src="https://unpkg.com/hyperscript.org@0.9.12"></script>

  <!-- Shoelace -->
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.19.1/cdn/themes/light.css" />
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.19.1/cdn/themes/dark.css" />
  <script type="module" src="https://cdn.jsdelivr.net/npm/@shoelace-style/shoelace@2.20.0/cdn/shoelace-autoloader.js"></script>

  <style>
    body {
      margin: 0;
      display: flex;
      height: 100vh;
      font-family: sans-serif;
    }

    .side {
      flex: 1;
      display: flex;
      justify-content: center;
      align-items: center;
      flex-direction: column;
      color: white;
      font-size: 1.2rem;
      position: relative;
    }

    .left {
      background: #007BFF;
      border: 10px solid white;
    }

    .right {
      background: #28A745;
      border: 10px solid white;
    }

    .ball {
      position: absolute;
      bottom: 15%; /* fica abaixo dos bot√µes */
      width: 120px;
      height: 120px;
      border-radius: 50%;
      background: radial-gradient(circle at 30% 30%, #ffffff 0%, #cccccc 30%, #999999 70%, #666666 100%);
      color: black;
      display: flex;
      justify-content: center;
      align-items: center;
      font-weight: bold;
      font-size: 0.9rem;
      transition: all 0.8s ease;
      box-shadow: inset -10px -10px 20px rgba(0,0,0,0.3),
                  inset 5px 5px 15px rgba(255,255,255,0.6),
                  0 10px 20px rgba(0,0,0,0.4);
      text-align: center;
      padding: 10px;
    }

    .left-pos {
      left: 20%;
    }

    .right-pos {
      left: 70%;
    }
  </style>
</head>

<body>
  <div class="side left">
    <sl-button variant="primary"
      hx-get="/call-ping"
      hx-target="#ball"
      hx-swap="innerHTML"
      _="on htmx:afterRequest add .left-pos to #ball then remove .right-pos from #ball">
      üèì Ping
    </sl-button>
  </div>

  <div class="side right">
    <sl-button variant="success"
      hx-get="/call-pong"
      hx-target="#ball"
      hx-swap="innerHTML"
      _="on htmx:afterRequest add .right-pos to #ball then remove .left-pos from #ball">
      üèì Pong
    </sl-button>
  </div>

  <div id="ball" class="ball left-pos">
    üèì Ready
  </div>
</body>

</html>
{{ end }}
